function __check_AMPM(){
	if [ `echo $(date +%p)` == 'PM' ]; then
		echo -en "\033[m\033[38;5;39m"$(date +%p)"\033[m"
	else
		echo -en "\033[m\033[38;5;226m"$(date +%p)"\033[m"
	fi
}
